<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="saveme.sureshm.com.saveme.MainActivity"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:background="#303F9F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.54" >

        <ImageButton
            android:id="@+id/savecard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Report via Smart Report Card"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/smartcardicon"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>

        <ImageButton
            android:id="@+id/nic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Report using NIC number"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/nic"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.54" >
        <ImageButton
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Report using NIC number"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/name"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>

        <ImageButton
            android:id="@+id/noinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="Report using NIC number"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="19dp"
            android:src="@drawable/noinfo"
            android:scaleType="fitCenter"
            android:background="#3f51b5"
            android:layout_margin="1dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/updateprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update My Profile"
        android:textSize="19dp"
        android:background="#303F9F"
        android:textColor="#fff"/>

</LinearLayout>
